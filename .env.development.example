# Development Environment
NODE_ENV=development

# Database Configuration
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_dev_password
POSTGRES_DB=movies_dev
DB_PORT=5432

# Server Configuration
SERVER_PORT=3000
BUILD_TARGET=development
SERVER_COMMAND=yarn start:dev

# Frontend Configuration
FRONTEND_PORT=5173
FRONTEND_INTERNAL_PORT=5173
CLIENT_DOCKERFILE=Dockerfile.dev
CHOKIDAR_USEPOLLING=true

# Development volumes (mounted for hot reload)
DEV_VOLUMES=./server:/usr/src/app

# API Configuration
VITE_PUBLIC_API_BASE_URL=/api